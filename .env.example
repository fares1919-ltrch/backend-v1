# Server Configuration
PORT=5000
NODE_ENV=development
SESSION_SECRET=your_session_secret_here
SESSION_NAME=cpf_session
SESSION_MAX_AGE=86400000
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
API_PREFIX=/api/v1
UPLOAD_DIR=uploads

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cpf_system
MONGODB_USER=your_mongodb_user
MONGODB_PASS=your_mongodb_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/v1/auth/github/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password
EMAIL_FROM=noreply@cpfsystem.com

# Biometric Configuration
BIOMETRIC_QUALITY_THRESHOLD=80
BIOMETRIC_MAX_FILE_SIZE=5242880
BIOMETRIC_ALLOWED_TYPES=image/jpeg,image/png

# CPF Configuration
CPF_VALIDITY_PERIOD=365
CPF_APPOINTMENT_LIMIT=3
CPF_PROCESSING_TIME=30

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=5 